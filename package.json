{
  "name": "nerds",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^16"
  },
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "lint": "npm run editorconfig",
    "build": "echo 'Build task'",
